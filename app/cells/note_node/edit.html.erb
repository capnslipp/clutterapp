<div class="edit note prop <%= 'badge' unless @body -%>">
	<%- fields_for :node_prop_attributes, @node.prop  do |prop_form| -%>
		<%= prop_form.hidden_field :id, :name => 'node[prop_attributes][id]' %>
		<%= prop_form.text_area :note, :class => 'field', :name => 'node[prop_attributes][note]' %>
	<%- end -%>
	<%#textarea class="field" id="node_prop_note" name="node[prop][note]"><%=h node_form.object.prop.note % ></textarea%>
</div>
