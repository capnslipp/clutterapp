<div class="edit text prop">
	<%- form_for @node, :url => polymorphic_path([@node.pile.owner, @node.pile, @node]), :html => {:method => 'put'} do |node_form| -%>
		
		<%- node_form.fields_for :prop do |prop_form| -%>
			<%= prop_form.text_field :text, :class => 'field' %>
		<%- end -%>
		
		<%# âœ“ %><%= node_form.submit '&#10003;' %>
		
	<%- end -%>
</div>
<div class="sub-line">
	<%= render_cell cell_for_node(@check), :edit, :node => @check, :mode => :badge unless @check.nil? %>
</div>
<div class="sub-line">
	<%= render_cell cell_for_node(@priority), :edit, :node => @priority, :mode => :badge unless @priority.nil? %>
</div>
<div class="sub-line">
	<%= render_cell cell_for_node(@time), :edit, :node => @time, :mode => :badge unless @time.nil? %>
</div>
<div class="sub-line">
	<%- for tag in @tags -%>
		<%= render_cell cell_for_node(tag), :edit, :node => tag, :mode => :badge %>
	<%- end unless @tags.nil? -%>
</div>
