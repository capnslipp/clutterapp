/* standard tags */

html, body {
	background-color: <%= bg_color %>;
	color: <%= text_color %>;
	height: 100%;
}

body {
	margin: 0; padding: 0;
	overflow-x: hidden;
}

body, input, textarea {
	font: 13px Helvetica, Arial, sans-serif;
	line-height: 20px;
}

#base {
	position: relative;
	height: auto; min-height: 100%;
}

#base > #fill {
	position: absolute;
	width: 100%; height: 100%;
}

#fill {
	position: absolute; z-index: 500;
	background: <%= fill_color.to_s(:css_rgba) %>;
}

.over-fill {
	z-index: 600;
}



a { color: <%= text_color %>; }

h1, h2, h3, h4, h5, h6 { font-weight: bold; margin: 0; }
section h1,
h1 { font-size: 18px; line-height: 24px; }
section section h1,
h2 { font-size: 17px; line-height: 17px; color: <%= wash_color %>; }
section section section h1,
h3 { font-size: 16px; line-height: 16px; color: <%= accent_color %>; }
section section section section h1,
h4 { font-size: 15px; line-height: 15px; color: <%= wash_color %>; }
section section section section section h1,
h5 { font-size: 14px; line-height: 14px; color: <%= accent_color %>; }
section section section section section section h1,
h6 { font-size: 13px; line-height: 13px; color: <%= wash_color %>; }

em { font-weight: bold; font-style: normal; color: <%= (inverted? ? '#222'.to_color.invert : '#222'.to_color).to_s(:css) %>; }


form {
	/*width: 100%;*/ /*neccessary?*/
}

input[type='text'], input[type='password'], textarea {
	background: <%= (wash_color * 0.5).with(:a => 0.9).to_s(:css_rgba) %>;
	border: <%= border_width %>px solid <%= wash_color * 0.5 %>;
	color: <%= wash_text_color %>;
	margin: -<%= border_width %>px;
	padding: 0;
	<%= border_radius_decl %>
}
input[type='text']:focus, input[type='password']:focus, textarea:focus {
	background: <%= (wash_color * 0.5).with(:a => 0.99).to_s(:css_rgba) %>;
	border-color: <%= focus_color %>;
}

input[type='button'], input[type='submit'] {
	background: <%= (wash_color * 0.5).with(:a => 0.9).to_s(:css_rgba) %>;
	border: <%= border_width %>px solid <%= wash_color * 0.5 %>;
	color: <%= wash_text_color %>;
	<%= border_radius_decl %>
}
input[type='button']:active, input[type='submit']:active {
	background: <%= (wash_color * 0.5).with(:a => 0.99).to_s(:css_rgba) %>;
	border-color: <%= accent_color %>;
}


input[type='button'].cancel {
	background-color: <%= bg_color.with(:a => 0.9).to_s(:css_rgba) %>;
	border-color: <%= (bg_color * 0.75) %>;
	color: <%= text_color %>;
}
input[type='button'].cancel:active {
	background: <%= bg_color.with(:a => 0.99).to_s(:css_rgba) %>;
	border-color: <%= accent_color %>;
}

/* general-purpose */

/*.box {
	background: #ccc;
	border: 1px solid #999;
}*/

a.sym, a .sym, .sym a {
	display: inline;
	text-align: center;
	vertical-align: baseline;
	text-decoration: none;
	font: 1em 'Arial Black', Arial, Helvetica, sans-serif;
	width: 1em;
	height: 1em;
	line-height: 1em;
}

.initially-hidden { display: none; }
.clear { clear: both; }

.overlay {
	position: absolute; z-index: 50;
	top: 0; bottom: 0; left: 0; right: 0;
	/*width: 100%; height: 100%;*/ /* width & height don't work so well when the parent element has padding */
	background: repeat 0 0;
}

.show.body .overlay {
	left: -4px; right: -4px;
	<%= border_radius_decl %>
}

.edit.body .overlay, .new.body .overlay {
	<%= border_radius_decl('8px') %>
}

/* flash messages, notices, and warnings */

.flash.message { color: <%= wash_text_color * 0.8 %>; }
.flash.notice { color: <%= wash_text_color * 0.8 %>; }
.flash.warning { color: <%= wash_text_color %>; font-style: italic; }
.flash.error { color: <%= wash_text_color %>; font-weight: bold; }

