/* standard tags */

html, body {
	position: relative;
	
	background-color: <%= bg_color %>;
	color: <%= text_color %>;
	height: 100%;
	-webkit-text-size-adjust: none;
}

body {
	margin: 0; padding: 0;
	overflow-x: hidden;
}

body, input, textarea {
	font: 12px Helvetica, Arial, sans-serif;
	line-height: 18px;
}

#base {
	position: absolute;
	width: 100%; height: 100%;
	top: 0; bottom: 0;
	overflow-x: hidden;
}

#fill {
	position: absolute; z-index: 500;
	width: 100%; height: 100%;
	
	background: <%= fill_color.to_s(:css_rgba) %>;
	        user-select: none;
	   -moz-user-select: none;
	-webkit-user-select: none;
}

.over-fill {
	z-index: 600;
}



a { color: <%= text_color %>; }

h1, h2, h3, h4, h5, h6 { font-weight: bold; margin: 0; }
h1 .sub, h2 .sub, h3 .sub, h4 .sub, h5 .sub, h6 .sub { font-size: 0.7em; opacity: 0.7; text-indent: 0.25em; }
h1 { font-size: 20px; line-height: 24px; }
h2, .section h1 { font-size: 18px; line-height: 24px; }
h3, .section .section h1 { font-size: 18px; line-height: 18px; color: <%= wash_color %>; }
h4, .section .section .section h1 { font-size: 16px; line-height: 16px; color: <%= wash_color %>; }
h5, .section .section .section .section h1 { font-size: 14px; line-height: 14px; color: <%= wash_color %>; }
h6, .section .section .section .section .section h1 { font-size: 12px; line-height: 12px; color: <%= wash_color %>; }

em { font-weight: bold; font-style: normal; color: <%= (inverted? ? '#222'.to_color.invert : '#222'.to_color).to_s(:css) %>; }

p, ul.textual, ol.textual { margin-bottom: 1em; }

ul.textual li { list-style: disc inside; }
ol.textual li { list-style: decimal inside; }


form {
	/*width: 100%;*/ /*neccessary?*/
}

input[type='text'], input[type='password'], textarea {
	background: <%= (wash_color * 0.5 + 0.1).to_s(:css_rgba) %>;
	border: <%= border_width %>px solid <%= wash_color * 0.5 %>;
	color: <%= wash_text_color %>;
	margin: -<%= border_width %>px;
	padding: 0 2px;
	<%= border_radius_decl %>
}
input[type='text']:focus, input[type='password']:focus, textarea:focus {
	background: <%= (wash_color * 0.5).to_s(:css_rgba) %>;
	border-color: <%= focus_color %>;
}

input[type='button'], input[type='submit'] {
	background: <%= (wash_color * 0.5 + 0.1).to_s(:css_rgba) %>;
	border: <%= border_width %>px solid <%= wash_color * 0.5 %>;
	color: <%= wash_text_color %>;
	<%= border_radius_decl %>
}
input[type='button']:active, input[type='submit']:active {
	background: <%= (wash_color * 0.5).to_s(:css_rgba) %>;
	border-color: <%= accent_color %>;
}


input[type='button'].cancel, input[type='submit'].cancel {
	background-color: <%= (bg_color + 0.1).to_s(:css_rgba) %>;
	border-color: <%= (bg_color * 0.75) %>;
	color: <%= text_color %>;
}
input[type='button'].cancel:active, input[type='submit'].cancel:active {
	background: <%= bg_color.to_s(:css_rgba) %>;
	border-color: <%= accent_color %>;
	float: right;
}

input[type='button'].done, input[type='submit'].done {
	position: relative; z-index: 2;
}


input[type='button'].another, input[type='submit'].another {
	position: relative; z-index: 1;
	margin-left: -8px; padding-left: 8px;
	
	background: <%= (wash_color + 0.1).to_s(:css_rgba) %>;
	border: <%= border_width %>px solid <%= wash_color %>;
	color: <%= wash_text_color %>;
}
input[type='button'].another:active, input[type='submit'].another:active {
	background: <%= wash_color.to_s(:css_rgba) %>;
	border-color: <%= accent_color %>;
}

/* general-purpose */

/*.box {
	background: #ccc;
	border: 1px solid #999;
}*/

.sym, a.sym {
	display: inline;
	text-align: center;
	vertical-align: middle;
	text-decoration: none;
	font: 1em Arial, Helvetica, sans-serif;
	width: 1em;
	/*height: 1em;*/
	/*line-height: 1em;*/
}
.sym img {
	height: 1em; width: 1em; line-height: 1em;
	vertical-align: middle;
}

.initially-hidden { display: none; }
.clear { clear: both; }

.overlay {
	position: absolute; z-index: 50;
	top: 0; bottom: 0; left: 0; right: 0;
	/*width: 100%; height: 100%;*/ /* width & height don't work so well when the parent element has padding */
	background: repeat 0 0;
}

.item > .overlay,
.item > .show.body > .overlay,
.item > .cont > .show.body > .overlay {
	left: -4px; right: -4px;
	<%= border_radius_decl %>
}

.edit.body .overlay, .new.body .overlay {
	<%= border_radius_decl('8px') %>
}

/* flash messages, notices, and warnings */

.flash.message { color: <%= text_color + 0.2 %>; }
.flash.notice { color: <%= text_color + 0.2 %>; }
.flash.warning { color: <%= text_color %>; font-style: italic; }
.flash.error { color: <%= text_color %>; font-weight: bold; }

#top-bar .flash.message { color: <%= wash_text_color * 0.8 %>; }
#top-bar .flash.notice { color: <%= wash_text_color * 0.8 %>; }
#top-bar .flash.warning { color: <%= wash_text_color %>; }
#top-bar .flash.error { color: <%= wash_text_color %>; }


form .prefix { padding-right: 1em; text-align: right; }


