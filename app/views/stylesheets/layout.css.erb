/* item list (old) */

ul.list ul.list {
	border-left: 1px dotted <%= divider_color * 0.5 + "#fff".to_color * 0.5 %>;
	padding-left: 18px;/*
	/*margin-left: -1em;*/
}

li { list-style-type: none; }

.item_for_node.pile > .name { display: inline-block; margin-bottom: 0.5em; }
.item_for_node.pile > .body { display: inline-block; width: auto; border: none; }
.item_for_node.pile > .body > .stub,
.item_for_node.pile > .body > .bar { float: none; }

.item_for_node {
	position: relative;
	
	<% if debug? %>
		background: rgba(255, 127, 0, 0.125);
		border: 2px solid rgba(255, 127, 0, 0.5);
		<%= border_radius_decl %>
		margin: 1px;
	<% end %>
}
.item_for_node > .body {
	<% if debug? %>
		<%= border_radius_decl %>
		margin: 1px;
	<% end %>
	
	min-height: 1.5em;
	border-top: 1px dotted <%= divider_color %>;
	margin-left: 23px;
}
.item_for_node > .show.body {
	<% if debug? %>
		background: rgba(127, 191, 0, 0.125);
		border: 2px solid rgba(127, 191, 0, 0.5);
	<% end %>
}
.item_for_node > .new.body,
.item_for_node > .edit.body {
	margin: -12px; margin-left: 8px;
	
	<%= border_radius_decl('16px') %>
	border: 8px solid <%= accent_color.with(:a => 0.5).to_s(:css_rgba) %>;
}
.item_for_node > .new.body > form,
.item_for_node > .edit.body > form {
	<%= border_radius_decl('8px') %>
	<%= shallow_shadow_decl %>
	
	background: rgba(255, 255, 255, 1.0);
	padding: 8px;
}
.item_for_node > .edit.body {
	position: absolute;
	/*width: 100%;*/ left: 0; right: 0;
	
	<% if debug? %>
		background: rgba(191, 0, 127, 0.125);
		border: 2px solid rgba(191, 0, 127, 0.5);
	<% end %>
}
.item_for_node > .new.body {
	position: relative;
	
	<% if debug? %>
		background: rgba(0, 255, 191, 0.125);
		border: 2px solid rgba(0, 255, 191, 0.5);
	<% end %>
}
.new.item_for_node {
	position: absolute;
	/*width: 100%;*/ left: 0; right: 0;
}
.item_for_node > .body .sub-line {
	/*overflow: auto; width: 100%; /* to contain floating elements */
	margin-top: 2px;
	margin-bottom: 4px;
}

/* page */
#page {
	padding: 24px; padding-top: 12px;
}


/* top-bar */

#top-bar {
	position: relative; z-index: 200;
}

#top-bar, #top-bar a {
	color: <%= wash_text_color %>;
}

/* contain-float-after */
#top-bar:after { content: ""; display: block; height: 0; clear: both; visibility: hidden; /* (FF, S2, O9) */ }

<%- top_bar_back_shadow_height = 10 -%>

#top-bar > .back {
	overflow: hidden;
	
	position: absolute;
	width: 100%; height: 100%;
	
	padding-bottom: <%=top_bar_back_shadow_height%>px;
}

#top-bar > .back > .fill {
	position: absolute;
	z-index: -1;
	top: 0; bottom: <%=top_bar_back_shadow_height%>px;
	top: -26px; left: -26px; right: -26px;
	
	background: <%= wash_color %>;
	
	margin-bottom: -<%= border_width %>px;
	border-bottom: <%= border_width %>px solid <%= generic_border_color.to_s(:css_rgba) %>;
	
	<%= shallow_shadow_decl %>
}

#top-bar > .logo {
	font-weight: bold;
	float: left;
	background: <%= accent_color %>;
	
	margin-bottom: -1px;
	border-bottom: <%= border_width %>px solid <%= generic_border_color.to_s(:css_rgba) %>;
	border-right: <%= border_width %>px solid <%= generic_border_color.to_s(:css_rgba) %>;
	
	padding: 4px;
	padding-right: 6px;
	
	font-size: 16px;
}

#top-bar > .logo a {
	text-decoration: none;
	background: none;
	color: #fff;
}

#top-bar > .content {
	float: left;
	margin-left: 4px;
	position: relative;
	z-index: 1;
	padding: 2px;
	height: 20px;
	line-height: 20px;
}

#top-bar > .corner {
	float: right;
	margin-right: 4px;
	position: relative;
	z-index: 1;
	padding: 2px;
	height: 20px;
	line-height: 20px;
}



/* scope sidebar and list */

/* scope sidebar */
#scope-box {
	float: left; clear: left;
	width: 15em;
	margin: 1em;
}
/* root-level scope-list */
#scope-list > ul.scope-list {
	margin-left: 0;
	border: none;
	padding-left: 0.5em; /* 0em - scope-item's indent */
}

/* all nested scope-lists */
ul.scope-list {
	margin-left: -0.5em; /* 0em + scope-item's indent */
	border-left: 1px solid #eee;
	padding-left: 1.5em; /* 1em - scope-item's indent */
}
ul.scope-list > li.scope-item {
	list-style-type: none;
	margin-left: 0;
	text-indent: -0.5em;
}
