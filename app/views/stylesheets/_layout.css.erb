ul.list ul.list {
	border-left: 1px dotted <%= divider_color * 0.5 + "#fff".to_color * 0.5 %>;
	/*padding-left: 18px;*/
	/*margin-left: -1em;*/
}

ul.item-list {
	position: relative;
}

ul.item-list > li.item {
	position: relative;
}

ul.item-list ul.item-list > li.item {
	margin-left: 28px;
}

ul.item-list > li.item.ui-sortable-placeholder {
	visibility: visible !important;
	
	position: relative;
}

ul.item-list > li.item.ui-sortable-placeholder > .back {
	position: absolute; z-index: 0;
	top: 0; bottom: 0; left: -2px; right: -2px;
	
	background: <%= accent_color.with(:a => 0.5).to_s(:css_rgba) %>;
	<%= border_radius_decl('8px') %>
	border: 4px solid transparent;
	margin: -4px;
}

ul.item-list > li.item.ui-sortable-placeholder > .cont {
	position: absolute; z-index: 1;
	top: 0; bottom: 0; left: -2px; right: -2px;
	
	background: <%= bright_bg_color %>;
	<%= border_radius_decl('4px') %>
	<%= deep_shadow_decl(shadow_color.with(:a =>0.1)) %>
}

ul.item-list > li.item.ui-sortable-helper {
	/*height: 0 !important;*/
}
ul.item-list.active {
	background: <%= bright_bg_color %>;
	<%= deep_shadow_decl(shadow_color.with(:a =>0.1)) %>
}

li { list-style-type: none; }

.pile.item > .body {
	display: block;
	margin: -16px; margin-bottom: 0;
	padding: 16px; padding-bottom: 18px;
	border: none;
}
.pile.item > .body > .header {
	position: relative;
	margin: -16px; margin-bottom: -18px;
	padding: 16px; padding-bottom: 18px;
}
.pile.item > .body > .header > .owner { opacity: 0.25; }
.pile.item > .body > .header > .owner,
.pile.item > .body > .header > .name { white-space: nowrap; }
.pile.item > .body > .action.stub { float: right; width: auto; border: none; }
.pile.item > .body.active {
}
.pile.item > .body.active > * {
	z-index: 2;
}
.pile.item > .body.active > .back {
	position: absolute; z-index: 1;
	top: 0; bottom: 0; left: 0; right: 0;
	
	background: <%= bright_bg_color %>;
	<%= deep_shadow_decl(shadow_color.with(:a =>0.1)) %>
}
.item > .body.active > .hyper { /* used to super-highlight items */
	position: absolute; z-index: 0;
	top: 0; bottom: 0; left: -2px; right: -2px;
	
	background: <%= accent_color.with(:a => 0.5).to_s(:css_rgba) %>;
	<%= border_radius_decl('8px') %>
	border: 4px solid transparent;
	margin: -4px;
}

.item {
	position: relative;
	
	<% if debug? %>
		background: rgba(255, 127, 0, 0.125);
		border: 2px solid rgba(255, 127, 0, 0.5);
		<%= border_radius_decl %>
		margin: 1px;
	<% end %>
}
.item > .body {
	position: relative;
	
	<% if debug? %>
		<%= border_radius_decl %>
		margin: 1px;
	<% end %>
	
	/*min-height: 1.5em;*/
}
.item > .show.body {
	<% if debug? %>
		background: rgba(127, 191, 0, 0.125);
		border: 2px solid rgba(127, 191, 0, 0.5);
	<% end %>
	
	border-top: 1px dotted <%= divider_color %>;
	padding: 2px 0;
	padding-left: 24px; /* for "> .bullet" */
	padding-right: 14px; /* for "> .action.stub" */
}
.item > .show.body.active {
}
.item > .show.body.active > .cont {
	position: relative;
}
.item > .show.body.active > .cont,
.item > .show.body.active > .bullet {
	z-index: 2;
}
.item > .show.body.active > .back {
	position: absolute; z-index: 1;
	top: 0; bottom: 0; left: -2px; right: -2px;
	
	background: <%= bright_bg_color %>;
	<%= border_radius_decl('4px') %>
	<%= deep_shadow_decl(shadow_color.with(:a =>0.1)) %>
}
.item > .show.body.active > .hyper { /* used to super-highlight items */
	position: absolute; z-index: 0;
	top: 0; bottom: 0; left: -2px; right: -2px;
	
	background: <%= accent_color.with(:a => 0.5).to_s(:css_rgba) %>;
	<%= border_radius_decl('8px') %>
	border: 4px solid transparent;
	margin: -4px;
}

.item > .new.body,
.item > .edit.body {
	margin: -12px 8px;
	
	background: <%= accent_color.with(:a => 0.5).to_s(:css_rgba) %>;
	<%= border_radius_decl('16px') %>
	border: 8px solid transparent;
}
.item > .new.body > .cont,  .item > .new.body > form > .cont,
.item > .edit.body > .cont, .item > .edit.body > form > .cont {
	<%= border_radius_decl('8px') %>
	<%= deep_shadow_decl(0.5) %>
	
	background: <%= bright_bg_color %>;
	padding: 8px;
}
/* contain-float-after */
.item > .new.body > .cont:after,  .item > .new.body > form > .cont:after,
.item > .edit.body > .cont:after, .item > .edit.body > form > .cont:after {
	content: ""; display: block; height: 0; clear: both; visibility: hidden; /* (FF, S2, O9) */
}
.item > .edit.body {
	position: absolute;
	/*width: 100%;*/ left: 0; right: 0;
	
	<% if debug? %>
		background: rgba(191, 0, 127, 0.125);
		border: 2px solid rgba(191, 0, 127, 0.5);
	<% end %>
}
.item > .new.body {
	position: relative;
	
	<% if debug? %>
		background: rgba(0, 255, 191, 0.125);
		border: 2px solid rgba(0, 255, 191, 0.5);
	<% end %>
}
.new.item {
	position: absolute;
	/*width: 100%;*/ left: 0; right: 0;
}
.item > .body .line {
	/*overflow: auto; width: 100%; /* to contain floating elements */
	margin-top: 2px;
	margin-bottom: 4px;
}
.item > .new.body .finish.line,
.item > .edit.body .finish.line {
	float: right;
}
.item > .body > .bullet {
	position: absolute;
	left: 4px;
	width: 16px;
	text-align: center;
	/*vertical-align: middle;*/
	/*line-height: 15px;*/
}
.item > .body > .bullet .sym { font-size: 200%; display: inline-block; margin-top: 1px; }

.item > .body > .action.stub,
.item > .body > #action-bar {
	position: absolute; z-index: 5;
	right: 4px;
}
.pile.item > .body > .action.stub,
.pile.item > .body > #action-bar {
	right: 20px;
}

/* page */
#page {
	/*padding: 16px;*/
	position: absolute;
	width: 100%; top: 24px; bottom: 0;
	/*overflow-y: scroll;*/
}


/* top-bar */

#top-bar {
	position: relative; z-index: 1000;
}

#top-bar, #top-bar a {
	color: <%= wash_text_color %>;
}

/* contain-float-after */
#top-bar:after { content: ""; display: block; height: 0; clear: both; visibility: hidden; /* (FF, S2, O9) */ }

<%- top_bar_back_shadow_height = 10 -%>

#top-bar > .back {
	overflow: hidden;
	
	position: absolute;
	width: 100%; height: 100%;
	
	padding-bottom: <%=top_bar_back_shadow_height%>px;
}

#top-bar > .back > .fill {
	position: absolute;
	z-index: -1;
	top: 0; bottom: <%=top_bar_back_shadow_height%>px;
	top: -26px; left: -26px; right: -26px;
	
	background: <%= wash_color %>;
	
	margin-bottom: -<%= border_width %>px;
	border-bottom: <%= border_width %>px solid <%= generic_border_color.to_s(:css_rgba) %>;
	
	<%= deep_shadow_decl(0.33) %>
}

#top-bar > .logo {
	font-family: 'Myriad Pro', Helvetica, Arial, sans-serif;
	
	font-weight: bold;
	float: left;
	background: <%= wash_color * 0.5 %>;
	
	margin-bottom: -1px;
	border-bottom: <%= border_width %>px solid <%= generic_border_color.to_s(:css_rgba) %>;
	border-right: <%= border_width %>px solid <%= generic_border_color.to_s(:css_rgba) %>;
	/*-moz-border-radius-topright: 6px; -webkit-border-top-right-radius: 6px;*/
	-moz-border-radius-bottomright: 6px; -webkit-border-bottom-right-radius: 6px;

	
	padding: 3px 4px 5px;
	
	font-size: 18px;
	line-height: 16px;
	height: 16px;
}

#top-bar > .logo a {
	text-decoration: none;
	background: none;
	color: #fff;
}

#top-bar > .logo sub {
	font-size: 0.75em;
	text-transform: uppercase;
	color: #f30;
	line-height: 16px;
}

#top-bar > .content {
	float: left;
	margin-left: 4px;
	position: relative;
	z-index: 1;
	padding: 2px;
	height: 20px;
	line-height: 20px;
}

#top-bar > .corner {
	float: right;
	margin-right: 4px;
	position: relative;
	z-index: 1;
	padding: 2px;
	height: 20px;
	line-height: 20px;
}



/* scope sidebar and list */

/* scope sidebar */

#scope-panel {
	position: absolute; z-index: 50;
	/*overflow-x: hidden; /* ??? */
	width: 360px;
	/* !important declarations to keep jQuery.resizable from using it's own dumb values */
	overflow-y: auto !important;
	height: auto !important;
	top: 0 !important;
	bottom: 0 !important;
	
	background: #e5e5e5;
}
#scope-panel.left {
	/* !important declarations to keep jQuery.resizable from using it's own dumb values */
	/*top: 24px !important;
	bottom: 0 !important;*/
	left: 0 !important;
	right: auto !important;
}
#scope-panel.right {
	/* !important declarations to keep jQuery.resizable from using it's own dumb values */
	/*top: 24px !important;
	bottom: 0 !important;*/
	right: 0 !important;
	left: auto !important;
}
#scope-panel > .back {
	position: absolute;
	height: 100%;
	width: 8px;
	overflow: hidden;
}
#scope-panel.left > .back {
    right: 0;
}
#scope-panel.right > .back {
	left: 0;
}
#scope-panel > .back > .shadow {
	position: relative;
	height: 100%;
	
	<%= deep_shadow_decl(0.25) %>
}
#scope-panel.left > .back > .shadow {
	right: -8px;
}
#scope-panel.right > .back > .shadow {
	left: -8px;
}
#scope-panel > .cont {
	padding: 16px;
	
	min-width: 230px;
}
#scope-panel > .ui-resizable-handle,
#scope-panel > .toggle {
	position: absolute;  z-index: 101;
	width: 16px; height: 100%;
	left: -8px;
	top: 0;
	        user-select: none;
	   -moz-user-select: none;
	-webkit-user-select: none;
}
#scope-panel > .toggle { z-index: 100; }
#scope-panel > a.toggle { display: block; }

.ui-resizable-helper { display: none; }

#item-area {
	position: absolute;
	overflow-y: auto;
	/*overflow-x: hidden; /* ??? */
	top: 0; bottom: 0; /*height: 100%;*/
	left: 0; right: 0; /*width: 100%;*/
}
#item-area.left,
#item-area.middle {
    margin-right: 360px;
}
#item-area.right,
#item-area.middle {
    margin-left: 360px;
}
#item-area > .cont {
	padding: 16px;
	
	min-width: <%= 320 - 10 - (16 * 2) %>px;
}
/* root-level scope-list */
#scope-list > ul.scope-list {
	margin-left: 0;
	border: none;
	padding-left: 0.5em; /* 0em - scope-item's indent */
}

/* all nested scope-lists */
ul.scope-list {
	margin-left: -0.5em; /* 0em + scope-item's indent */
	border-left: 1px solid #eee;
	padding-left: 1.5em; /* 1em - scope-item's indent */
}
ul.scope-list > li.scope-item {
	list-style-type: none;
	margin-left: 0;
	text-indent: -0.5em;
}
