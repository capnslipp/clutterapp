.front #top-bar > .logo > .graphic {	float: left;	
	width: 0;	overflow: visible;
}

.front #top-bar > .logo > .text {	float: left;		position: relative; z-index: 1;
	margin-left: 4px;
	
	font-size: 72px;
	line-height: 1em;
	
	color: transparent;	filter: alpha(opacity=0);
}


.front #page {	padding: 24px;
}


.front h2 { font-size: 32px; line-height: 1.25em; color: <%= text_color %>; }
.front h3 { font-size: 24px; line-height: 1.25em; color: <%= accent_color %>; }


.front #feature-box {
	margin: 64px 0;
}


.front #feature-box h4 { font-size: 18px; line-height: 1.25em; color: <%= wash_color %>; }

.front #feature-box ul {}
.front #feature-box li {}
.front #feature-box li.feature {}

.front #feature-box > img.screenshot {
	min-width: 512px;
	max-width: 100%;
}


.front h5 { font-size: 14px; line-height: 1.25em; color: <%= accent_color %>; }
.front h6 { font-size: 13px; line-height: 1.25em; color: <%= wash_color %>; }