/* shadow/shadowed */
body { overflow-x: hidden; }


/* scope sidebar and list */

/* scope sidebar */
#scope-box {
	float: left; clear: left;
	width: 15em;
	margin: 1em;
}
/* root-level scope-list */
#scope-list > ul.scope-list {
	margin-left: 0;
	border: none;
	padding-left: 0.5em; /* 0em - scope-item's indent */
}

/* all nested scope-lists */
ul.scope-list {
	margin-left: -0.5em; /* 0em + scope-item's indent */
	border-left: 1px solid #eee;
	padding-left: 1.5em; /* 1em - scope-item's indent */
}
ul.scope-list > li.scope-item {
	list-style-type: none;
	margin-left: 0;
	text-indent: -0.5em;
}
/*.scope-list > .scope-item > .body { font-size: 1.0em; font-weight: bold; }
.scope-list > .scope-item > .body * { color: #666; }
.scope-list > .scope-item.current > .body { color: <%= accent_color %>; }*/


#sidebar-right {
	float: right; clear: right;
	position: relative; z-index: 1;
}


/* pile list */

#pile-box {
	float: left; clear: left;
	width: 15em;
	margin: 1em;
}

/*#pile-box > .pile { font-weight: bold; color: #666; }
#pile-box > .current.pile { color: <%= accent_color %>; }
#pile-box > .action {}*/


#view-options-box {
	float: left; clear: left;
	width: 15em;
	margin: 1em;
}


/* user-bar */

#user-bar-greeting, #user-bar-action, #user-bar-greeting form { display: inline; }


/* props */

.prop {
	display: block;
	line-height: 12px;
	margin: 4px 0;
	
	border: <%= border_width %> solid transparent;
	<%= border_radius_decl %>
}

.prop.badge {
	font-size: 10px;
	line-height: 12px;
	height: 12px;
	
	margin-left: 2px; margin-right: 2px;
	
	border-color: <%= generic_border_color(0.5).to_s(:css_rgba) %>;
	border-width: 1px;
}
.prop.badge input[type='text'], .prop.badge textarea {
    font-size: 10px; line-height: 12px; height: 12px
}

.check.prop { border: none; box-shadow: none; -moz-box-shadow: none; -webkit-box-shadow: none; }
.check.prop.badge { float: left; margin-right: 6px; }

.note.prop {
	display: block;
	padding: 4px;
	vertical-align: top;
	
	line-height: 18px;
	
	margin-bottom: 6px;
	
	border-color: <%= generic_border_color.to_s(:css_rgba) %>; <%= shallow_shadow_decl(0.25) %> }
}
.note.prop, .note.prop textarea { line-height: 15px; }
.note.prop textarea { height: 1px; }

.priority.prop {
	width: 12px; /* same as height and line-height */
	
	display: inline-block;
	margin-left: 0; margin-right: 0;
	
	text-align: center;
	background: <%= wash_color %>;
	color: <%= wash_text_color %>;
	
	<%= border_radius_decl('6px') %>
}
.priority.prop, .priority.prop input { font-family: 'Arial Black', sans-serif; font-weight: bold; }
.priority.prop input { }
.priority.prop.badge { float: left; margin-right: 6px; }

.tag.prop {
	display: inline-block;
	
	background-color: <%= wash_color %>;
	color: <%= wash_text_color %>;
	
	padding: 0 2px;
}
.tag.prop, .tag.prop input { font-weight: bold; text-transform: uppercase; }
.tag.prop input { }
.tag.prop.badge { float: left; }

.text.prop {
}

.time.prop {
	color: <%= text_color.with(:a => 0.75).to_s(:css_rgba) %>;
	
	display: inline-block;
	
	padding: 0 2px;
}
.time.prop.badge { float: left; }


.edit.prop {
	margin: -1px;
	margin-left: 18px;
	
	background: <%= focus_back %>;
	border-width: 2px;
	border-color: <%= focus_border %>;
	
	<%= deep_shadow_decl(0.5) %>
}
/*.edit.prop.badge { margin: 0 2px; }*/

.edit.prop input[type='submit'] { display: none; }
.edit.note.prop input[type='submit'] { display: inherit; }

.edit.prop input[type='text'], .edit.prop textarea {
	background: transparent;
	color: <%= text_color %>;
	border: none;
	margin: 0;
	padding: 1px;
	display: block;
	width: 100%;
}
.edit.prop input[type='button'], .edit.prop input[type='submit'] { position: absolute; }

.prop input[type='checkbox'] { border: none; margin: 0; background: none; }
