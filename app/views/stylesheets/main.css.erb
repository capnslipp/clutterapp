/* standard tags */

html, body {
	background-color: <%= bg_color %>;
	color: <%= text_color %>;
	height: 100%;
}

body {
	margin: 0; padding: 0;
}

body, input, textarea {
	font: 12px/1.5em Helvetica, Arial, sans-serif;
}

#base {
	position: relative;
	height: auto; min-height: 100%;
}

#base > #fill {
	position: absolute;
	width: 100%; height: 100%;
}

#fill {
	position: absolute; z-index: 100;
	background: <%= fill_color.to_s(:css_rgba) %>;
}


a { color: <%= text_color %>; }

h1, h2, h3, h4, h5, h6 { font-weight: bold; margin: 0; }
h1 { font-size: 18px; line-height: 24px; }
h2 { font-size: 17px; line-height: 17px; color: <%= wash_color %>; }
h3 { font-size: 16px; line-height: 16px; color: <%= accent_color %>; }
h4 { font-size: 15px; line-height: 15px; color: <%= wash_color %>; }
h5 { font-size: 14px; line-height: 14px; color: <%= accent_color %>; }
h6 { font-size: 13px; line-height: 13px; color: <%= wash_color %>; }


form {
	width: 100%;
}

input[type='text'], input[type='password'], textarea {
	background: <%= wash_color * 0.666 %>;
	border: <%= border_width %> solid transparent;
	color: <%= wash_text_color %>;
	margin: -<%= border_width %>;
	padding: 0;
	<%= border_radius_decl %>
}
input[type='text']:focus, input[type='password']:focus, textarea:focus { background: <%= focus_back %>; border-color: <%= focus_border %>; }
input[type='button'], input[type='submit'] {
	background: <%= wash_color * 0.666 %>;
	border: <%= border_width %> solid <%= wash_color * 0.5 %>;
	color: <%= wash_text_color %>;
	<%= border_radius_decl %>
}
input[type='button']:active, input[type='submit']:active { background: <%= wash_color * 0.5 %>; border-color: <%= accent_color %>; }


/* general-purpose */

/*.box {
	background: #ccc;
	border: 1px solid #999;
}*/

a.sym, a .sym, .sym a {
	display: inline;
	text-align: center;
	vertical-align: baseline;
	text-decoration: none;
	font: 1em 'Arial Black', Arial, Helvetica, sans-serif;
	width: 1em;
	height: 1em;
}

.initially-hidden { display: none; }


/* flash messages, notices, and warnings */

.flash.message { color: <%= wash_text_color * 0.8 %>; }
.flash.notice { color: <%= wash_text_color * 0.8 %>; }
.flash.warning { color: <%= wash_text_color %>; font-style: italic; }
.flash.error { color: <%= wash_text_color %>; font-weight: bold; }


/* item list (old) */

ul.list ul.list {
	border-left: 1px dotted <%= divider_color * 0.5 + "#fff".to_color * 0.5 %>;
	padding-left: 18px;/*
	/*margin-left: -1em;*/
}

li { list-style-type: none; }

.item_for_node.pile > .name { display: inline-block; margin-bottom: 0.5em; }
.item_for_node.pile > .body { display: inline-block; width: auto; border: none; }
.item_for_node.pile > .body > .stub,
.item_for_node.pile > .body > .bar { float: none; }

.item_for_node {  }
.item_for_node > .body { min-height: 1.5em; border-top: 1px dotted <%= divider_color %>; margin-left: 23px; }
.item_for_node > .body > .sub-line { overflow: auto; width: 100%; /* to contain floating elements */ }

/* page */
#page {
	padding: 12px;
}


/* top-bar */

#top-bar {
	position: relative; z-index: 200;
	/*margin-bottom: 8px;*/
	height: 24px;
	width: 100%;
	<%= deep_shadow_decl %>
}

#top-bar, #top-bar a {
	color: <%= wash_text_color %>;
}

/* contain-float-after */
#top-bar:after { content: ""; display: block; height: 0; clear: both; visibility: hidden; /* (FF, S2, O9) */ }

#top-bar > .back {
	position: absolute;
	z-index: -1;
	top: 0; bottom: 0; left: 0; right: 0;
	background: <%= wash_color %>;
	
	margin-bottom: -<%= border_width %>;
	border-bottom: <%= border_width %> solid <%= generic_border_color.to_s(:css_rgba) %>;
}

#top-bar > .logo {
	font-weight: bold;
	float: left;
	background: <%= accent_color %>;
	
	margin-bottom: -1px;
	border-bottom: <%= border_width %> solid <%= generic_border_color.to_s(:css_rgba) %>;
	border-right: <%= border_width %> solid <%= generic_border_color.to_s(:css_rgba) %>;
	
	padding: 4px;
	padding-right: 6px;
	
	font-size: 16px;
	height: 16px;
	line-height: 20px;
}

#top-bar > .content {
	float: left;
	margin-left: 4px;
	position: relative;
	z-index: 1;
	padding: 2px;
	height: 20px;
	line-height: 20px;
}

#top-bar > .corner {
	float: right;
	margin-right: 4px;
	position: relative;
	z-index: 1;
	padding: 2px;
	height: 20px;
	line-height: 20px;
}



/* buttons/bars */

.widget {
	margin-right: 0.5em;
	
	height: 1.25em;
	line-height: 1.25em;
}

.buttons {
	<%= shallow_shadow_decl %>
	
	margin: -<%= border_width %>;
	border: <%= border_width %> solid <%= generic_border_color.to_s(:css_rgba) %>;
	<%= border_radius_decl('6px') %>
	
	height: 1em;
	line-height: 1em;
}

.widget, .buttons {
	white-space: nowrap;
}

.widget a, .buttons a { text-decoration: none; }

.stub, .bar {
	font-size: 12px;
	line-height: 16px;
	height: 16px;
	/*width: 16px;*/
}

.bar {
	position: relative;
	z-index: 1;
}

.stub { float: left; }

.action.bar { float: left; }

.action.stub .widget,
 #action-bar .widget { margin-left: -18px; }

.action.stub .widget,
 #action-bar .widget,
    #new-bar .widget { margin-top: 4px; }
.action.stub .widget, .action.stub .widget a,
 #action-bar .widget,  #action-bar .widget a,
    #new-bar .widget,     #new-bar .widget a { color: <%= widget_color %>; }
.action.stub .widget a:hover,
 #action-bar .widget a:hover,
    #new-bar .widget a:hover { color: <%= active_widget_color %>; }

#action-bar .buttons {
	background: <%= accent_color.adjust(:v => -0.05).with(:a => 0.9).to_s(:css_rgba) %>;
	position: absolute;
	top: 4px; left: 0;
	padding: 0 0.5em;
	vertical-align: middle;
}
#action-bar .buttons, #action-bar .buttons a { color: <%= wash_text_color %>; }
#action-bar .buttons a {}
#action-bar .buttons a:hover {
	text-shadow:	0 2px	3px <%= shadow_color(0.5).to_s(:css_rgba) %>,
					0 -2px	3px <%= shadow_color(0.5).to_s(:css_rgba) %>,
					2px 0	3px <%= shadow_color(0.5).to_s(:css_rgba) %>,
					-2px 0	3px <%= shadow_color(0.5).to_s(:css_rgba) %>;
}

#new-bar .buttons {
	background: <%= accent_color %>;
	position: absolute;
	top: 4px; left: 0;
	padding: 0 0.5em;
	vertical-align: middle;
}
#new-bar .buttons, #new-bar .buttons a { color: <%= wash_text_color %>; }
#new-bar .buttons a { margin-right: 0.25em; }
#new-bar .buttons a:hover {
	text-shadow:	0 2px	3px <%= shadow_color(1.0).to_s(:css_rgba) %>,
					0 -2px	3px <%= shadow_color(1.0).to_s(:css_rgba) %>,
					2px 0	3px <%= shadow_color(1.0).to_s(:css_rgba) %>,
					-2px 0	3px <%= shadow_color(1.0).to_s(:css_rgba) %>;
}

