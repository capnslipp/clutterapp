/* shadow/shadowed */
body { overflow-x: hidden; }


/* scope sidebar and list */

/* scope sidebar */
#scope-box {
	float: left; clear: left;
	width: 15em;
	margin: 1em;
}
/* root-level scope-list */
#scope-list > ul.scope-list {
	margin-left: 0;
	border: none;
	padding-left: 0.5em; /* 0em - scope-item's indent */
}

/* all nested scope-lists */
ul.scope-list {
	margin-left: -0.5em; /* 0em + scope-item's indent */
	border-left: 1px solid #eee;
	padding-left: 1.5em; /* 1em - scope-item's indent */
}
ul.scope-list > li.scope-item {
	list-style-type: none;
	margin-left: 0;
	text-indent: -0.5em;
}
/*.scope-list > .scope-item > .body { font-size: 1.0em; font-weight: bold; }
.scope-list > .scope-item > .body * { color: #666; }
.scope-list > .scope-item.current > .body { color: <%= accent_color %>; }*/


#sidebar-right {
	float: right; clear: right;
	position: relative; z-index: 1;
}


/* pile list */

#pile-box {
	float: left; clear: left;
	width: 15em;
	margin: 1em;
}

/*#pile-box > .pile { font-weight: bold; color: #666; }
#pile-box > .current.pile { color: <%= accent_color %>; }
#pile-box > .action {}*/


#view-options-box {
	float: left; clear: left;
	width: 15em;
	margin: 1em;
}


/* user-bar */

#user-bar-greeting, #user-bar-action, #user-bar-greeting form { display: inline; }


/* props */

.prop {
	display: block;
	line-height: 1em;
	margin-left: 1.5em;
	
	border: 2px solid transparent;
	border-radius:			4px;
	-moz-border-radius:		4px;
	-webkit-border-radius:	4px;
}

.check.prop {
	border: none;
}

.note.prop {
	display: block;
	padding: 2px;
	vertical-align: top;
	
	margin-bottom: 0.5em;
	
	border-radius:			4px;
	-moz-border-radius:		4px;
	-webkit-border-radius:	4px;
	
	<%= shallow_shadow_decl(0.125) %>
}
.show.note.prop, .edit.note.prop textarea { line-height: 1.25em; }
.edit.note.prop textarea { height: 1em; }

.priority.prop {
	font-size: 0.75em;
	line-height: 1em;
	
	/*vertical-align: middle;*/
	position: relative;
	top: -0.25em;
	display: inline-block;
	
	text-align: center;
	width: 1em; height: 1em;
	background: <%= wash_color %>;
	color: <%= wash_text_color %>;
	
	border-radius:			6px;
	-moz-border-radius:		6px;
	-webkit-border-radius:	6px;
	
	<%= shallow_shadow_decl(0.25) %>
}
.priority.prop, .priority.prop input { font-family: 'Arial Black', sans-serif; font-weight: bold; padding: 0; }
.priority.prop input { font-size: 1em; }

.tag.prop {
	font-size: 0.75em;
	line-height: 1em;
	
	display: inline-block;
	padding: 0;
	margin: 1px;
	background-color: <%= wash_color %>;
	color: <%= wash_text_color %>;
	
	border-radius:			4px;
	-moz-border-radius:		4px;
	-webkit-border-radius:	4px;
	
	<%= shallow_shadow_decl(0.25) %>
}
.tag.prop, .tag.prop input { font-weight: bold; text-transform: uppercase; padding: 0; }
.tag.prop input { font-size: 1em; }

.text.prop {
}

.time.prop {
	font-style: oblique;
}

.note.prop, .priority.prop, .tag.prop { border-color: <%= generic_border_color.to_s(:css_rgba) %>; }


    .edit.text.prop input[type='submit'],
.edit.priority.prop input[type='submit'],
     .edit.tag.prop input[type='submit'],
    .edit.time.prop input[type='submit'] { display: none; }


.edit.prop {
	background: <%= focus_back %>; border-color: <%= focus_border %>;
	
	<%= deep_shadow_decl(0.25) %>
}

.edit.prop input[type='text'], .edit.prop textarea {
	height: 1em;
	background: transparent;
	color: <%= text_color %>;
	border: none;
	margin: -1px;
	padding: 2px;
	display: block;
	width: 100%;
}
.edit.prop input[type='button'], .edit.prop input[type='submit'] { position: absolute; }

.prop input[type='checkbox'] { border: none; margin: 0; background: none; }
