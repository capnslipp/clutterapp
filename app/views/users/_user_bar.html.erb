<% if logged_in? -%>
	<div id="user-bar-greeting">Logged in as <%= link_to_current_user :content_method => :login %></div>
	<div id="user-bar-action">(<%= link_to "Log out", logout_path %>)</div>
<% else -%>
	<div id="user-bar-greeting">
		<% form_tag session_path do %>
			username: <%= text_field_tag :login, params[:login] %>
			password: <%= password_field_tag :password, params[:password] %>
			<%= submit_tag 'Sign In' %>
		<% end %>
	</div>
	<%#div id="user-bar-action">
		Or <%= link_to "sign up for an invite", new_user_path % >
	</div%>
<% end -%>
