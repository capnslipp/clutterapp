<h1>Sign Up for ClutterApp</h1>

<p>
	<em>ClutterApp is currently only accepting sign-ups from robots that make pizza-making robots.</em>
</p>

<%= error_messages_for :user %>
<% form_for :user, :url => users_path do |f| -%>
	<%= f.hidden_field :invite_token %>
	
	<table>
		<tr class="line">
			<td class="prefix"><%= label_tag :signup_code, 'super-secret sign-up code' %></td>
			<td><%= text_field_tag :signup_code, '', :size => 30 %></td>
		</tr>
		
		<tr class="line">
			<td class="prefix"><%= label_tag :login, 'login' %></td>
			<td><%= f.text_field :login %></td>
		</tr>
		
		<tr class="line">
			<td class="prefix"><%= label_tag :email, 'email' %></td>
			<td><%= f.text_field :email %></td>
		</tr>
		
		<tr class="line">
			<td class="prefix"><%= label_tag :password, 'password' %></td>
			<td><%= f.password_field :password %></td>
		</tr>
		
		<tr class="line">
			<td class="prefix"><%= label_tag :password_confirmation, 'confirm password' %></td>
			<td><%= f.password_field :password_confirmation %></td>
		</tr>
	</table>
	
	<%= submit_tag 'Sign Up' %>
<% end -%>
