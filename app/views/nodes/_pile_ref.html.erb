<%- cache ({:node_item => child_node.id}.to_json) do -%>
	<% content_tag_for :li, item, 'item_for', :class => dom_class(item, 'item_for'), :'oc:url' => path_for([item.pile.owner, item.pile, item]) do -%>
		<%- cache ({:node_section => child_node.id}.to_json) do -%>
			<section id="<%= dom_id(item.prop.ref_pile.root_node, 'item_for') %>" class="<%= dom_class(item.prop.ref_pile.root_node, 'item_for') %> pile" oc:nodes-url="<%=path_for([item.prop.ref_pile.owner, item.prop.ref_pile, :nodes])%>">
				
				<%= render :partial => node_body_partial(@cell_state), :locals => {:node => item} %>
				
				<%- cache ({:node_list => item.prop.ref_pile.root_node.id}.to_json) do -%>
					<ul class="node list">
						<%= render :partial => 'nodes/list_items', :locals => {:item => item.prop.ref_pile.root_node} %>
					</ul>
				<%- end -%>
				
			</section>
		<%- end -%>
	<% end %>
<%- end -%>
