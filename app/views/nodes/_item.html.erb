<% content_tag_for(:li, item, 'item', :class => 'item') do -%>
	<div class="body">
		<% div_for(item, 'item-content', :class => 'item-content') do -%>
			<%= render :partial => 'nodes/action_buttons', :locals => {:item => item} %>
			<%= yield -%>
		<% end -%>
	</div>
	<%= render :partial => 'nodes/item_list', :locals => {:item => item, :render_child => render_child} %>
<% end -%>